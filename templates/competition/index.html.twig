{% extends 'base.html.twig' %}

{% block title %}Competition index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="card">
                <div class="card-content">
                    <h1 class="card-title">Liste des Competitions</h1>
                    <a class="btn green" href="{{ path('competition_new') }}"><i class="material-icons">add</i></a>
                    <table class="striped">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Titre</th>
                            <th>Date_debut</th>
                            <th>Date_fin</th>
                            <th>Date_publication</th>
                            <th>Lieu</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for competition in competitions %}
                            <tr>
                                <td>{{ competition.id }}</td>
                                <td>
                                    <a href="{{ path('competition_show',{'id': competition.id}) }}">{{ competition.titre }}</a>
                                </td>
                                <td>{{ competition.dateDebut ? competition.dateDebut|date('Y-m-d') : '' }}</td>
                                <td>{{ competition.dateFin ? competition.dateFin|date('Y-m-d') : '' }}</td>
                                <td>{{ competition.datePublication ? competition.datePublication|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ competition.lieu }}</td>
                                <td>
                                    <a class="btn blue btn-small" href="{{ path('competition_show', {'id': competition.id}) }}"><i class="material-icons">visibility</i></a>
                                    <a class="btn yellow btn-small" href="{{ path('competition_edit', {'id': competition.id}) }}"><i class="material-icons">mode_edit</i></a>
                                    {{ include('competition/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
