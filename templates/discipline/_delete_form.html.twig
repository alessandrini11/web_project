<form method="post" action="{{ path('discipline_delete', {'id': discipline.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ discipline.id) }}">
    <button class="btn red"><i class="material-icons">delete</i></button>
</form>
