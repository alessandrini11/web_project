{% extends 'base.html.twig' %}

{% block title %}Classement index{% endblock %}

{% block body %}
    <h1>Classement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classement in classements %}
            <tr>
                <td>{{ classement.id }}</td>
                <td>{{ classement.nom }}</td>
                <td>
                    <a href="{{ path('classement_show', {'id': classement.id}) }}">show</a>
                    <a href="{{ path('classement_edit', {'id': classement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('classement_new') }}">Create new</a>
{% endblock %}
