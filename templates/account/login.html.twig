{% extends 'basepublique.html.twig' %}

{% block title %}login{% endblock %}

{% block body %}
    <div class="container">
       <div class="row">
           <div class="col s12 m3">&nbsp;</div>
           <div class="col s12 6">
               <div class="card">
                   <div class="card-content">
                       <span class="card-title">Connectez-Vous</span>
                       <form action="{{ path('login') }}" method="post">
                           <div class="row">
                               <div class="input-field">
                                   <i class="material-icons prefix">account_circle</i>
                                   <input name="_username" id="icon_prefix" class="validate" type="email">
                                   <label for="icon_prefix">Email</label>
                               </div>
                           </div>
                           <div class="row">
                               <div class="input-field">
                                   <i class="material-icons prefix">lock</i>
                                   <input name="_password" type="password" id="icon_prefix">
                                   <label for="icon_prefix">Password</label>
                               </div>
                           </div>
                           <div class="row">
                               <div class="input-field">
                                   <button class="btn purple">connexion</button>
                               </div>
                           </div>
                       </form>
                   </div>
               </div>
           </div>
           <div class="col s12 m3"></div>
       </div> 
    </div>
    <script>

    </script>
{% endblock %}
