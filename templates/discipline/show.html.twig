{% extends 'base.html.twig' %}

{% block title %}Discipline{% endblock %}

{% block body %}
    <h1>Discipline</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ discipline.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ discipline.nom }}</td>
            </tr>
            <tr>
                <th>Sport</th>
                <td>{{ discipline.sport }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ discipline.description }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ discipline.genre }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ discipline.categorie }}</td>
            </tr>
            <tr>
                <th>Olympique</th>
                <td>{{ discipline.olympique ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('discipline_index') }}">back to list</a>

    <a href="{{ path('discipline_edit', {'id': discipline.id}) }}">edit</a>

    {{ include('discipline/_delete_form.html.twig') }}
